<!-- login form include facebook auth login / bootstrap form for login, redirect to profile -->
<div class="container">

<p>Already a member? Login:</p>
  <div class="row">
    <div class="col-md-4">
      <%= bootstrap_form_for :user do |f| %>
        <%= f.text_field :email, placeholder: "Enter your email", icon: "envelope" %>
        <%= f.password_field :password, placeholder: "Enter your password", icon: "lock" %>
        <%= f.submit "Log In", :class=> "btn btn-primary"%>
      <% end %>
    </div>
  </div>

</div>