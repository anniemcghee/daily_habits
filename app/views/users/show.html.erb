        <% @goals_user.each do |goal| %>
        <div>

          <ul>
            <table class="post table-striped">
              <li> <%= f.collection_check_boxes :goal_ids, @goals, :id, :name %></li>
              <br>

            </table>
          </ul>
        </div>
        <% end %>
      </div>
    </div>
      <% end %>

  </div>
</div>


